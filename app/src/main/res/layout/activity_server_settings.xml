<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/role_screen_background1"
    android:gravity="center_horizontal">

    <EditText
        android:id="@+id/etPin"
        style="@style/EditTextStandard"
        android:hint="Введите PIN"
        android:inputType="numberPassword" />

    <Button
        android:id="@+id/btnCheckPin"
        style="@style/ButtonPrimary"
        android:text="Продолжить" />

    <LinearLayout
        android:id="@+id/settingsContent"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnResetRole"
            style="@style/ButtonPrimary"
            android:text="Сбросить роль" />

        <Button
            android:id="@+id/btnChangePin"
            style="@style/ButtonPrimary"
            android:text="Изменить PIN" />

        <Button
            android:id="@+id/btnEnableAdmin"
            style="@style/ButtonPrimary"
            android:text="Сделать приложением администратора" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Период бездействия"
            style="@style/TextBody"
            android:layout_marginTop="24dp" />

        <Spinner
            android:id="@+id/spinnerInactivity"
            style="@style/SpinnerStandard" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Интервал активности"
            style="@style/TextBody"
            android:layout_marginTop="24dp" />

        <Spinner
            android:id="@+id/spinnerActive"
            style="@style/SpinnerStandard" />
    </LinearLayout>
</LinearLayout>
