<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/role_screen_background">

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_marker"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textServerName"
        style="@style/TextSubheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя сервера"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textCoords"
        style="@style/TextCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Координаты:"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/textTime"
        style="@style/TextCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Время:"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonDetails"
        style="@style/ButtonPrimary"
        android:text="Подробнее" />

    <Button
        android:id="@+id/buttonListen"
        style="@style/ButtonPrimary"
        android:text="Послушать" />

    <Button
        android:id="@+id/buttonDelete"
        style="@style/ButtonPrimary"
        android:text="Удалить"
        android:textColor="#F44336" />
</LinearLayout>
