<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:padding="24dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 🖼 Иконка -->
            <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_marker" />

            <!-- 🧩 Инфо о сервере -->
            <TextView
                android:id="@+id/textServerName"
                style="@style/TextSubheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Имя сервера" />

            <TextView
                android:id="@+id/textCoords"
                style="@style/TextCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Координаты:" />

            <TextView
                android:id="@+id/textTime"
                style="@style/TextCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Время:" />

                <TextView
                    style="@style/TextCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Чтобы увидеть другие команды или подробную информацию нажмите кнопку:" />

                <Button
                    android:id="@+id/buttonDetails"
                    style="@style/ButtonPrimary"
                    android:layout_marginBottom="16dp"
                    android:text="Подробнее" />

                <TextView
                    style="@style/TextCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Для открытия карты или навигатора нажмите кнопку:" />

                <Button
                    android:id="@+id/buttonNavigate"
                    style="@style/ButtonPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Навигация" />

                <Button
                    android:id="@+id/buttonDelete"
                    style="@style/ButtonPrimary"
                    android:text="Удалить"
                    android:textColor="#F44336" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
