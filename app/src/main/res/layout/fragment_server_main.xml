<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/role_screen_background"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvServerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID сервера: ..."
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvPairCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Код: ..."
        android:textSize="18sp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tvCurrentCoords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Координаты: ..."
        android:textSize="16sp"
        android:padding="16dp"
        android:background="#80FFFFFF"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Время обновления: ..."
        android:textSize="14sp"
        android:padding="16dp"
        android:background="#80FFFFFF"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Режим работы: ..."
        android:textSize="14sp"
        android:padding="16dp"
        android:background="#80FFFFFF" />
</LinearLayout>
