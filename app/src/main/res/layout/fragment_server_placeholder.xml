<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/role_screen_background1">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="@android:color/transparent"
        android:fillViewport="true">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:animateLayoutChanges="true">

                <!-- Логотип -->
                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_logo_placeholder"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside" />

                <!-- Заголовок -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/server_mode_title"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:layout_marginBottom="12dp" />

                <!-- Описание -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/server_mode_description"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="12dp" />

                <!-- Как начать -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/server_mode_how_to_start_title"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/server_mode_how_to_start_steps"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <!-- Настройки -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/server_mode_settings_title"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/server_mode_settings_list"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <!-- Советы по безопасности -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/server_mode_security_title"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/server_mode_security_tips"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <!-- Контакты -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/support_title"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <!-- Кнопки -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_send_email"
                    style="@style/ButtonFilledMaterial"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGitHub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_open_github"
                    style="@style/ButtonFilledMaterial" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>
</FrameLayout>
