<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/role_screen_background1">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="@android:color/transparent">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:alpha="0"
            android:animateLayoutChanges="true">

            <!-- Иконка -->
            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_logo_placeholder"
                android:contentDescription="@string/app_name" />

            <!-- Заголовок -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextHeading"
                android:layout_marginBottom="12dp"
                android:text="SafeOrbit — режим клиента" />

            <!-- Описание -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextBody"
                android:layout_marginBottom="12dp"
                android:text="В режиме клиента вы можете наблюдать за перемещением сервера на карте в реальном времени и получать обновления о его активности." />

            <!-- Как использовать -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextSubheading"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Как использовать приложение:" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextBody"
                android:text="1. Получите ID и код от сервера.\n2. Введите их в форму подключения.\n3. Разрешите доступ к интернету и карте.\n4. Наблюдайте за сервером в списке или на карте.\n5. Нажмите на маркер для подробностей и навигации." />

            <!-- Настройки -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextSubheading"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Настройки клиента:" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextBody"
                android:text="• Установка иконок серверов\n• Выбор навигационного приложения\n• Отображение подробной информации\n• Удаление подключений" />

            <!-- Контакты -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextSubheading"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Поддержка и предложения:" />

            <Button
                android:id="@+id/btnEmail"
                style="@style/ButtonPrimary"
                android:text="📧 Написать письмо" />

            <Button
                android:id="@+id/btnGitHub"
                style="@style/ButtonPrimary"
                android:text="🌐 Открыть GitHub" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    </ScrollView>
</FrameLayout>