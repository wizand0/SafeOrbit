<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/role_screen_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_marker"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя сервера"
            style="@style/TextSubheading"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textCoords"
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Координаты:" />

        <TextView
            android:id="@+id/textTime"
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время:" />

        <TextView
            android:id="@+id/textAddress"
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Адрес:"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonNavigate"
            style="@style/ButtonPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Навигация" />

        <Button
            android:id="@+id/buttonRequestLocation"
            style="@style/ButtonPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Обновить координаты"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/buttonChangeIntervals"
            style="@style/ButtonPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменить интервалы"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/buttonListen"
            style="@style/ButtonPrimary"
            android:text="Послушать" />

        <TextView
            android:id="@+id/textAutoOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Автоотключение трансляции через 30 сек."
            android:textSize="16sp"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textStreamTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="16sp"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Анимация звуковых волн -->
        <ImageView
            android:id="@+id/imageAudioAnim"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_audio_wave_1"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="4dp"/>

    </LinearLayout>
</ScrollView>
